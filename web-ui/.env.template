# TrinityCore SOAP API Configuration
# Copy this file to .env.local and configure your TrinityCore worldserver SOAP settings

# SOAP API Host (usually localhost if running on same machine)
TRINITY_SOAP_HOST=127.0.0.1

# SOAP API Port (default: 7878, configured in worldserver.conf)
TRINITY_SOAP_PORT=7878

# SOAP API Username (must have admin privileges)
TRINITY_SOAP_USERNAME=admin

# SOAP API Password
TRINITY_SOAP_PASSWORD=admin

# Use mock SOAP client for development (set to 'true' if worldserver is not running)
# When enabled, the Live Data Inspector will use simulated data
TRINITY_SOAP_MOCK=true

# Database Configuration (for direct MySQL queries)
# Note: Some features require direct database access in addition to SOAP API
DB_HOST=127.0.0.1
DB_PORT=3306
DB_AUTH_DATABASE=acore_auth
DB_CHARACTERS_DATABASE=acore_characters
DB_WORLD_DATABASE=acore_world
DB_USERNAME=acore
DB_PASSWORD=acore

# Map Files Configuration
# Path to TrinityCore extracted .map files directory
# This should point to your mapextractor output directory containing .map files
# Example: /path/to/TrinityCore/data/maps or C:/TrinityCore/maps
MAP_FILES_PATH=

# Application Configuration
NEXT_PUBLIC_APP_NAME="TrinityCore API Explorer"
NEXT_PUBLIC_APP_VERSION="2.6.0"

# Feature Flags
NEXT_PUBLIC_ENABLE_SOAP_INSPECTOR=true
NEXT_PUBLIC_ENABLE_SCHEMA_EXPLORER=true
NEXT_PUBLIC_ENABLE_PROFILER=true
NEXT_PUBLIC_ENABLE_WORKFLOW=true
